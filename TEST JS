<script>
	let tbill = 0.00;
	let amount1 = 0.00;
	let amount2 = 0.00;
	let amount3 = 0.00;
	
	var addBill1 = function()
		{ 
			let redtext = " ";
			document.getElementById("addBill").innerHTML = redtext;
		}
	var addBill2 = function()
		{ 
			let redtext = "[plus 7/11 Fee of Php 40.00] ";
			document.getElementById("addBill").innerHTML = redtext;
		}
	var totalall = function(amount1,amount2,amount3)
		{
			tbill = amount1 + amount2 + amount3;
			document.getElementById("tbill").innerHTML = tbill;
		}
	var item1 = function () 
	{ 
		amount1 = 0.00;
		let itemno1 = document.getElementById("itemno1").value;
		amount1 = itemno1 * 500.00;
		document.getElementById("amount1").innerHTML = amount1;
		totalall(amount1,amount2,amount3);
	}
	var item2 = function ()
	{ 
		amount2 = 0.00;
		let itemno2 = document.getElementById("itemno2").value;
		amount2 = itemno2 * 750.00;
		document.getElementById("amount2").innerHTML = amount2;
		totalall(amount1,amount2,amount3);
	}
	var item3 = function ()
	{ 
		amount3 = 0.00;
		let itemno3 = document.getElementById("itemno3").value;
		amount3 = itemno3 * 1000.00;
		document.getElementById("amount3").innerHTML = amount3;
		totalall(amount1,amount2,amount3);
	}
</script>
